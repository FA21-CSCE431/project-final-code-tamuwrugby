<p id="notice"><%= notice %></p>

<h2><%= @attendance_record.record_date %><h2>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Attendance</th>
      <th>Excuse Note</th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>

        <td><%= @attendance_record.attendance_type %></td>
        <td><%= @attendance_record.note %></td>
      </tr>

    <% end %>
  </tbody>
</table>



<%= link_to 'Edit', edit_attendance_record_path(@attendance_record) %> |
<%= link_to 'Back', attendance_records_path %>
