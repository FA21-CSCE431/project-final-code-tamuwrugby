<p id="notice"><%= notice %></p>

<h1>Encounters</h1>

<table>
  <thead>
    <tr>
      <th>Recruit</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @encounters.each do |encounter| %>
        <tr>
          <% recruit = Recruit.find_by(id: encounter.recruit_id) %>
          <td><%= recruit.name %></td>
          <td><%= encounter.notes %></td>
          <td><%= link_to 'Show', encounter %></td>
          <td><%= link_to 'Edit', edit_encounter_path(encounter) %></td>
          <td><%= link_to 'Delete', delete_encounter_path(encounter) %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Encounter', new_encounter_path %>
<%= link_to 'Recruits', recruits_path %>
