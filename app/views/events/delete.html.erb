<div class="event delete">
<h2>Delete Event</h2>


<%= form_for(@event, :method => 'delete') do |f| %>

  <p>Are you sure you want to permanently delete this event?</p>

<div class="container"><table class="table table-bordered table-hover table-stripped">
  <thead>
    <tr>
        <th>Name</th>
        <th>Info</th>
        <th>Date</th>
        <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @event.name %></td>
      <td><%= @event.info %></td>
      <td><%= @event.date %></td>
      <td><%= @event.time %></td>
    </tr>
  </tbody>
  </table></div>

  <div class="form-buttons">
    <%= f.submit("Delete Event") %>
  </div>

<% end %>
<br/>
</div>

<%= link_to('Back', events_path, :class => 'back-link') %>