<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Person ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Address</th>
      <th>Person Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.person_id %></td>
        <td><%= person.name %></td>
        <td><%= person.email %></td>
        <td><%= person.phone_number %></td>
        <td><%= person.address %></td>
        <td><%= person.person_type %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Delete', delete_person_path(person)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

