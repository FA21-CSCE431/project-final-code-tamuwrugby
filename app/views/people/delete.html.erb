
<div class="people delete">
<h2>Delete Person</h2>


<%= form_for(@person, :method => 'delete') do |f| %>

  <p>Are you sure you want to permanently delete this person?</p>
  
<table>
  <thead>
    <tr>
        <th>Person ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Address</th>
        <th>Person Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @person.person_id %></td>
      <td><%= @person.name %></td>
      <td><%= @person.email %></td>
      <td><%= @person.phone_number %></td>
      <td><%= @person.address %></td>
      <td><%= @person.person_type %></td>
    </tr>
  </tbody>
  </table>

  <div class="form-buttons">
    <%= f.submit("Delete Person") %>
  </div>

<% end %>
<br/>
</div>

<%= link_to('Back', people_path, :class => 'back-link') %>
