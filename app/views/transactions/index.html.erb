<center>
<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Transaction date</th>
      <th>Amount</th>
      <th>Merch</th>
      <th>Person name</th>
      <th>Person UIN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.transaction_date %></td>
        <td><%= transaction.amount %></td>
        <% merchandise = transaction.merchandise %>
        <% if merchandise == nil %>
        <td>N/A</td>
        <% else %>
        <td><%= merchandise.item_name %></td>
        <% end %>
        <% person = transaction.person %>
        <% if merchandise == nil %>
        <td>N/A</td>
        <td>N/A</td>
        <% else %>
        <td><%= person.name %></td>
        <td><%= person.uin %></td>
        <% end %>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Delete', delete_transaction_path(transaction)%></td>
      </tr>
      </tr>
    <% end %>
  </tbody>
</table>
</center>


