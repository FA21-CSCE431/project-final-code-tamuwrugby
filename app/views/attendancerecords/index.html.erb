<p id="notice"><%= notice %></p>

<h1>Attendance Records</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendancerecords.each do |attendancerecord| %>
      <tr>
        <td><%= attendancerecord.event.name %></td>
        <td><%= attendancerecord.attendancetype %></td>

        <td><%= link_to 'Show Event', [@event]%></td>
        <td><%= link_to 'Edit', edit_event_attendancerecords_path(event) %></td>
        <td><%= link_to 'Destroy', attendancerecord, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

